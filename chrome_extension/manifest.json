{
	"name": "LinkPeelr",
	"version": "1.0",
	"description": "Know Where Link Is Going Before You Click",
	"browser_action": {
    	"default_icon": "favicon_16x16.png",
    	"popup": "popup.html"
	},
	
	"background_page" : "background.html",
	
	"content_scripts": [
    	{
			"matches": ["http://*/*"],
			"css": ["tipTip.css"],
			"js": ["jquery.min.js", "hover_script.js"]
    	}
  	],
  	
  	"permissions": [
    	"http://linkpeelr.appspot.com/*"
	]
}